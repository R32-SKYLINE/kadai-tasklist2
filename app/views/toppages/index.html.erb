<% if logged_in? %>
  <!-- <p>ログイン完了ユーザ: <%#= current_user.name %></p> -->
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task) do |f| %>
        <div class="mb-3">
          <p>Content:</p>
          <%= f.text_field :content, class: 'form-control' %>
          <p>Status:</p>
          <%= f.text_field :status, class: 'form-control' %>
          
          <%#= f.text_area :content, class: 'form-control', rows: 5 %>
          <%#= f.text_area :status, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>