<% if current_user.id == @task.user_id %>
   <h3>タスク詳細ページ</h3>
   <br>
   <table class="table table-striped table-bordered">
      <tr>
         <th class="text-center">ID</th>
         <th class="text-center">タスク</th>
         <th class="text-center">ステータス</th>
         <th class="text-center">登録日</th>
      </tr>
      <tr>
         <td class="text-center"><%= @task.id %></td>
         <td class="text-center"><%= @task.content %></td>
         <td class="text-center"><%= @task.status %></td>
         <td class="text-center"><%= @task.created_at %></td>
      </tr>
   </table>
   <br>
   <%= link_to '一覧に戻る', tasks_path, class: 'btn btn-success' %>
   <%= link_to 'このタスクを編集する', edit_task_path(@task.id), class: 'btn btn-warning' %>
   <%#= link_to "削除", @task, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
<% else %>
   <p>他のユーザーのタスクは閲覧できません。</p>
   <%= link_to '一覧に戻る', tasks_path, class: 'btn btn-success' %>
<% end %>
